class Solution {
    public String mergeAlternately(String word1, String word2) {
        
        int n = word1.length();
        int m = word2.length();
        String str = "";
        int num = Math.max(n,m);
        for(int i=0;i<num;i++)
        {
            if(i<n){
                str += word1.charAt(i);
               
            }
            if(i<m){
                 str += word2.charAt(i);
            }
        
        }

        return str;
    }
}
